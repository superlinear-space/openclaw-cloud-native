# OpenClaw Configuration
namespace = "openclaw"
container_image = "ghcr.io/openclaw/openclaw:latest"
busybox_image = "busybox:latest"

# Gateway Settings
# gateway_token = ""  # Auto-generated if empty
gateway_replicas = 1
gateway_bind = "lan"
# gateway_port = 18789
# bridge_port = 18790
service_type = "LoadBalancer"

# Storage (PVC for production)
use_hostpath = false
config_storage_size = "1Gi"
workspace_storage_size = "5Gi"

# For development with hostPath instead of PVCs, uncomment:
# use_hostpath = true
# fix_hostpath_permissions = true
# config_hostpath = "/var/lib/openclaw/config"
# workspace_hostpath = "/var/lib/openclaw/workspace"

# Node Scheduling (label your nodes with: kubectl label nodes <node-name> openclaw-enabled=true)
node_selector = {
  "openclaw-enabled" = "true"
}

# Kubernetes Configuration
# kubeconfig_path = "~/.kube/config"

# Additional hostPath mounts for gateway
# gateway_additional_hostpath_mounts = [
#   {
#     name       = "extra-mount"
#     host_path  = "/host/path"
#     mount_path = "/container/path"
#     read_only  = true
#   }
# ]

# Optional: Claude AI Integration
claude_ai_session_key = ""
claude_web_session_key = ""
claude_web_cookie = ""

# Onboarding (set to true for initial setup, sequence: onboarding â†’ gateway)
create_onboarding_job = false
create_gateway_deployment = true

# Optional: Browserless Chrome (for browser automation)
# create_browserless = false
# browserless_image = "ghcr.io/browserless/chromium:latest"
# browserless_replicas = 1
# browserless_port = 3000
# browserless_token = ""  # Auto-generated if empty
# browserless_shm_size = "1Gi"  # Shared memory size for /dev/shm

# Optional: SearXNG Local Search Engine
# create_searxng = false
# searxng_image = "docker.io/searxng/searxng:latest"
# searxng_replicas = 1
# searxng_port = 8080
# searxng_secret = ""  # Auto-generated if empty
# searxng_config_storage_size = "100Mi"
# searxng_data_storage_size = "500Mi"
# When use_hostpath = true, SearXNG will use these paths:
# searxng_config_hostpath = "/var/lib/openclaw/searxng/config"
# searxng_data_hostpath = "/var/lib/openclaw/searxng/data"
